<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-autostart" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>myautostart</name>
    <js-module name="myautostart" src="www/myautostart.js">
        <clobbers target="cordova.plugins.myautostart" />
    </js-module>
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="myautostart">
                <param name="android-package" value="com.example.cordova.plugin.myAutostart"/>
            </feature>
        </config-file>
		<config-file target="AndroidManifest.xml" parent="/manifest">
			<uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
			<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
			<uses-permission android:name="android.permission.WAKE_LOCK" />
			<uses-permission android:name="android.permission.INTERNET" />
		</config-file>
		<config-file target="AndroidManifest.xml" parent="/manifest/application">
			
			<meta-data android:name="com.google.firebase.messaging.default_notification_color" android:resource="@color/black" />
			<meta-data android:name="com.google.firebase.messaging.default_notification_channel_id" android:value="@string/default_notification_channel_id" />
			<service
				android:name="com.example.cordova.plugin.foregroundServices.ForeService"
				android:enabled="true"
				android:exported="false" />
		    <receiver android:name="com.example.cordova.plugin.receiver.AutoStart" android:enabled="true" android:exported="false">
				<intent-filter>
					<category android:name="android.intent.category.DEFAULT"/>
					<action android:name="android.intent.action.BOOT_COMPLETED"/>
					<action android:name="android.intent.action.ACTION_BOOT_COMPLETED"/>
					<action android:name="android.intent.action.REBOOT"/>
					<action android:name="android.intent.action.QUICKBOOT_POWERON"/>
					<action android:name="android.intent.action.ACTION_SHUTDOWN"/>
				</intent-filter>
			</receiver>
			<service android:name="com.example.cordova.plugin.services.MyFirebaseMessagingService" android:exported="false" android:directBootAware="true">
				<intent-filter>
					<action android:name="com.google.firebase.MESSAGING_EVENT" />
				</intent-filter>
			</service>
		</config-file>
		
		
		
		<resource-file src="src/android/autostartString.xml" target="res/values/autostartString.xml" />
		<resource-file src="src/android/colors.xml" target="res/values/colors.xml" />
		
        <source-file src="src/android/myAutostart.java" target-dir="src/com/example/cordova/plugin" />
		
		<source-file src="src/android/services/MyFirebaseMessagingService.java" target-dir="src/com/example/cordova/plugin/services" />
		<source-file src="src/android/receiver/AutoStart.java" target-dir="src/com/example/cordova/plugin/receiver" />
		<source-file src="src/android/foregroundServices/ForeService.java" target-dir="src/com/example/cordova/plugin/foregroundServices" />
		
		<framework src="src/android/build.gradle" custom="true" type="gradleReference" />
		
		<framework src="com.google.firebase:firebase-analytics:18.0.2" />
		<framework src="com.google.firebase:firebase-messaging-directboot:20.2.0" />
		<framework src="androidx.appcompat:appcompat:1.1.0" />
		<framework src="com.google.android.material:material:1.1.0" />
		<framework src="androidx.constraintlayout:constraintlayout:1.1.3" />
		<framework src="com.google.firebase:firebase-messaging:21.0.1" />
		<framework src="androidx.work:work-runtime:2.3.4" />
    </platform>
	
</plugin>
