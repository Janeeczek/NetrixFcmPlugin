<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-autostart" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>myautostart</name>
    <js-module name="myautostart" src="www/myautostart.js">
        <clobbers target="cordova.plugins.myautostart" />
    </js-module>
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="myautostart">
                <param name="android-package" value="com.example.cordova.plugin.myAutostart"/>
            </feature>
        </config-file>
		<config-file target="AndroidManifest.xml" parent="/manifest">
			<uses-permission android:name="android.permission.WAKE_LOCK" />
			<uses-permission android:name="android.permission.INTERNET" />
			<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
		</config-file>
		<config-file target="AndroidManifest.xml" parent="/manifest/application">
			
			<service android:name="com.example.cordova.plugin.FCM.MyFirebaseMessagingService" android:exported="false" android:directBootAware="true">
				<intent-filter>
					<action android:name="com.google.firebase.MESSAGING_EVENT" />
				</intent-filter>
			</service>
		</config-file>
		
		
		
		<resource-file src="src/android/autostartString.xml" target="res/values/autostartString.xml" />
		<resource-file src="src/android/colors.xml" target="res/values/colors.xml" />
		
        <source-file src="src/android/myAutostart.java" target-dir="src/com/example/cordova/plugin" />
		
		<source-file src="src/android/FCM/MyFirebaseMessagingService.java" target-dir="src/com/example/cordova/plugin/FCM" />
		
		<framework src="src/android/build.gradle" custom="true" type="gradleReference" />
		
		<framework src="com.google.firebase:firebase-analytics:18.0.2" />
		<framework src="com.google.firebase:firebase-messaging-directboot:20.2.0" />
		<framework src="androidx.appcompat:appcompat:1.1.0" />
		<framework src="com.google.android.material:material:1.1.0" />
		<framework src="androidx.constraintlayout:constraintlayout:1.1.3" />
		<framework src="com.google.firebase:firebase-messaging:21.0.1" />
		<framework src="androidx.work:work-runtime:2.3.4" />
    </platform>
	
</plugin>
